<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvYemekAdi"
        android:textSize="25sp"
        android:text="@string/yemekAdi"
        >

    </TextView>

    <EditText
        android:id="@+id/etYemekAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=""
        android:inputType="text"
        ></EditText>

    <TextView
        android:id="@+id/tvYemekFiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yemekFiyat"
        android:textSize="25sp">

    </TextView>

    <EditText
        android:id="@+id/etYemekFiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:inputType="numberDecimal">
    </EditText>

    <LinearLayout
        android:id="@+id/llYemekGorsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivYemekGorsel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher">

        </ImageView>
        <Button
            android:id="@+id/btnGorselSec"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yemekSec"
            android:textSize="25sp"
            android:onClick="YemekSec"
            >

        </Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llIslemler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnEkle"
            android:text="@string/yemekEkle"
            android:textSize="25sp"
            android:onClick="YemekEkle"
            >

        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnYemekListe"
            android:text="@string/yemekListesi"
            android:textSize="25sp">
        </Button>

    </LinearLayout>



</LinearLayout>